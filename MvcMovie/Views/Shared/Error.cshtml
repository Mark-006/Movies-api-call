@model MvcMovie.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model != null && Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Development Mode</h3>
<p>
    To view more detailed information about the error, switch to the <strong>Development</strong> environment.
</p>
<p>
    <strong>Note:</strong> The <strong>Development</strong> environment should not be enabled in production as it might expose sensitive information.
    For local debugging, you can set the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restart the application.
</p>
