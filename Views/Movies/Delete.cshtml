@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Model.Title ?? "No title available"
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            @(Model.Score != 0 ? Model.Score.ToString() : "No score available")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoreAverage)
        </dt>
        <dd class="col-sm-10">
            @(Model.ScoreAverage != 0 ? Model.ScoreAverage.ToString() : "No score average available")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Model.Type ?? "No type available"
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImdbId)
        </dt>
        <dd class="col-sm-10">
            @Model.ImdbId ?? "No IMDb ID available"
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TmdbId)
        </dt>
        <dd class="col-sm-10">
            @(Model.TmdbId != 0 ? Model.TmdbId.ToString() : "No TMDb ID available")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MalId)
        </dt>
        <dd class="col-sm-10">
            @(Model.MalId != 0 ? Model.MalId.ToString() : "No MAL ID available")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ImdbId" />
        <p>Are you sure you want to delete this item?</p>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
